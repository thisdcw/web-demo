{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    // 或 "esnext"，取决于你的需求
    "target": "esnext",
    "noEmit": false,
    // 确保这个选项设置为 false
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "composite": true,
    "baseUrl": ".",
    "outDir": "./dist",
    // 设置输出目录
    "paths": {
      "@": [
        "src"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ]
}
